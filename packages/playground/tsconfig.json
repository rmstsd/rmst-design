{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "target": "esnext",
    "noEmit": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,

    /* modules */
    "module": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,

    /* type checking */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@": ["./src"],
      "rmst-design": ["./../rmst-design/src/index.ts"]
    }
  },
  "include": ["src"]
}
